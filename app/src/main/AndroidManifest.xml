<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jugyang.classroom">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />



    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/NoToolbarFullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Setting Activity -->
        <activity
            android:name=".ui.SettingActivity"
            android:label="Setting" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Guide Activity -->
        <activity
            android:name=".ui.GuideActivity"
            android:theme="@style/NoToolbarFullscreen" />

        <!-- Login Activity -->
        <activity
            android:name=".ui.LoginActivity"
            android:label="Login" />

        <!-- Register Activity -->
        <activity
            android:name=".ui.RegisterActivity"
            android:label="Register" />

        <!--ForgetPassword Activity -->
        <activity
            android:name=".ui.ForgetPasswordActivity"
            android:label="ForgetPassword" />

        <!-- PersonalCenter Activity -->
        <activity
            android:name=".ui.PersonalCenterActivity"
            android:label="PersonalCenter"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!-- QRcode Activity-->
        <activity android:name=".zxing.activity.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/NoToolbarFullscreen"/>

        <!-- AdBrowserActivity -->
        <activity android:name=".ui.AdBrowserActivity"/>


    </application>


</manifest>